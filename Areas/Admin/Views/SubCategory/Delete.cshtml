@model YemekSiparisWeb.Models.ViewModels.SubCategoryAndCategoryViewModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Sub Category Delete</h2>
<br />

        <form method="post" asp-action="Delete">
            <div class="border backgroundWhite">
                <div class="form-group row">
                    <div class="col-3">
                        <label class="col-form-label">Sub Category</label>
                    </div>
                    <div class="col-5">
                        <input asp-for="SubCategory.Name" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label class="col-form-label">Category Name</label>
                    </div>
                    <div class="col-5">
                        <select id="ddlCategoryList" asp-for="SubCategory.CategoryId" disabled asp-items="@(new SelectList(Model.CategoryList, "Id", "Name"))" class="form-control"></select>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-5 offset-3">
                        <partial name="_DeleteAndBackToListButton" model="Model.SubCategory.Id" />
                    </div>
                </div>
            </div>
        </form>